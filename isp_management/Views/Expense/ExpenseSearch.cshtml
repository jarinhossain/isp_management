        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        Expense Search
                    </header>
                    <div class="panel-body">
                        <div class="adv-table">

                            <table class="display table table-bordered table-striped" id="example">
                                <thead>
                                    <tr role="row">
                                        <th>Option</th>
