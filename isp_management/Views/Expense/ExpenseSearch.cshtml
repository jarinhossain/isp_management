                                            <td>
                                                <a href="~/Expense/ExpenseEdit?id=@client.Id">Edit </a>
                                                | <a href="~/Expense/ExpenseDetails?id=@client.Id" >Details</a>
                                            </td>
                                            <td>@client.Ref</td>
                                            <td>@client.AccountHead_Id</td>
                                            <td>@client.Amount</td>
                                            <td>@client.Amount_Details</td>
                                        </tr>
                                    }
                                <tbody>
                            </table>

                        </div>
                    </div>
                </section>
            </div>
        </div>

        <!-- page end-->
    </section>
</section>
