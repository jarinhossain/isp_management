@model isp_management.Models.ExpenseTB
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<section id="main-content" class="">
    <section class="wrapper">
        <!-- page start-->
        <!-- page start-->
        <div class="row">

            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Expense Details
                    </header>
                    <div class="table-responsive panel col-md-8">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Ref: </td>
                                    <td style="font-weight:bold">@Model.Ref</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">AccountHead: </td>
                                    <td style="font-weight:bold">@Model.AccountHead_Id</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Amount: </td>
                                    <td style="font-weight:bold">@Model.Amount</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Amount Details: </td>
                                    <td style="font-weight:bold">@Model.Amount_Details</td>
                                </tr>


                            </tbody>
                        </table>
                        <div class="form-group" style="text-align:center">

                            <a href="~/Expense/ExpenseEdit?id=@Model.Id" class="btn btn-success">Edit</a>
                            <a href="~/Expense/ExpenseSearch" class="btn btn-info">Back</a>

                        </div>
                    </div>
                </section>

            </div>
        </div>

        <!-- page end-->
    </section>
</section>