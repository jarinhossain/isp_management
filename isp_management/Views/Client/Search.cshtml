        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        Client Search
                    </header>
                    <div class="panel-body">
                        <div class="adv-table">
                            
                            <table class="display table table-bordered table-striped" id="example">
                                <thead>
                                    <tr role="row">

                                        <th>Option</th>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Mobile1</th>
                                        <th>Mobile2</th>
                                        <th>Email</th>
                                        <th>Gender</th>
                                        <th>Blood Group</th>
                                        <th>National Id</th>
                                        <th>Occupation</th>
                                        @*<th>Address</th>
                                        <th>Monthly Amount</th>
                                        <th>IP_Address</th>
                                        <th>Connection_Date</th>
                                        <th>Speed</th>
                                        <th>Status</th>
                                        <th>Route</th>
                                        <th>Package</th>
                                        <th>Discount</th>*@
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (isp_management.Models.Client client in (IEnumerable<isp_management.Models.Client>)Model)
        {
                                        <tr>
                                            <td>
                                                <a href="~/Client/Edit?id=@client.Id" class="btn btn-primary">Edit </a>
                                                | <a href="~/Client/ClientDetails?id=@client.Id" class="btn btn-success">Details</a>
                                             </td>
                                            <td>@client.Code</td>
                                            <td>@client.Name</td>
                                            <td>@client.Mobile1</td>
                                            <td>@client.Mobile2</td>
                                            <td>@client.Email</td>
                                            <td>@client.Gender_Id</td>
                                            <td>@client.Blood_Group_Id</td>
                                            <td>@client.National_Id</td>
                                            <td>@client.Occupation</td>
                                            @*<td>@client.Address</td>
                                            <td>@client.Monthly_Amount</td>
                                            <td>@client.IP_Address</td>
                                            <td>@client.Connection_Date</td>
                                            <td>@client.Speed</td>
                                            <td>@client.Status_Id</td>
                                            <td>@client.Route</td>
                                            <td>@client.Package</td>
                                            <td>@client.Discount</td>*@
                                        </tr>
                                    }
                                <tbody>
                            </table>
                             
                        </div>
                    </div>
                </section>
            </div>
        </div>

        <!-- page end-->
    </section>
</section>
