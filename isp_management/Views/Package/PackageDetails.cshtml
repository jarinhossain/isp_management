@model isp_management.Models.PackageTB
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<section id="main-content" class="">
    <section class="wrapper">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Package Details
                    </header>
                    <div class="table-responsive panel col-md-8">
                        <table class="table">
                            <tbody>

                                <tr>
                                    <td class="text-primary text-right" width="30%">Name: </td>
                                    <td style="font-weight:bold">@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">MBPS: </td>
                                    <td style="font-weight:bold">@Model.MBPS</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Taka: </td>
                                    <td style="font-weight:bold">@Model.Taka</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Remarks: </td>
                                    <td style="font-weight:bold">@Model.Remarks</td>
                                </tr>

                            </tbody>
                        </table>
                        <div class="form-group" style="text-align:center">

                            <a href="~/Package/Edit?id=@Model.Id" class="btn btn-success" >Edit</a>
                            <a href="~/Package/Search" class="btn btn-info">Back</a>

                        </div>
                    </div>
                </section>

            </div>
        </div>

        <!-- page end-->
    </section>
</section>