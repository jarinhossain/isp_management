@model isp_management.Models.PackageTB
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<section id="main-content" class="">
    <section class="wrapper">
        <!-- page start-->
        <!-- page start-->
        <div class="row">

            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Package Edit
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                            @using (Html.BeginForm("Edit", "Package", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                               
                                @Html.HiddenFor(m => m.Id)
                                <div class="form-group">
                                    <label class="control-label col-md-3">Name<span style="color:red;">*</span></label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Name, new { @Class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">MBPS<span style="color:red;">*</span></label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.MBPS, new { @Class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Taka<span style="color:red;">*</span></label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Taka, new { @Class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-3">Remarks<span style="color:red;">*</span></label>
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Remarks, new { @Class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3"></div>

                                    <input type="submit" value="Update" style="margin-left:15px" class="btn btn-info" />
                                    <input type="button" value="Reset" id="reset" class="btn btn-info" />

                                </div>

                                <div class="form-group">
                                    <div class="col-md-3"></div>
                                    <label id="msg" style="color:red;">@ViewData["msg"]</label>
                                </div>
                            }
                        </div>
                    </div>
                </section>

            </div>
        </div>

        <!-- page end-->
    </section>
</section>
<script>
    $(document).ready(function () {
        $("form").submit(function (event) {
            if ($("#Name").val() == "") {
                event.preventDefault();
                swal("Failed", "Name is required", "error").then(function () {
                    $("#Name").focus();
                });
            }

            else if ($("#MBPS").val() == "") {
                event.preventDefault();
                swal("Failed", "MBPS is required", "error").then(function () {
                    $("#MBPS").focus();
                });
            }
            else if ($("#Taka").val() == "") {
                event.preventDefault();
                swal("Failed", "Taka is required", "error").then(function () {
                    $("#Taka").focus();
                });
            }
            else if ($("#Remarks").val() == "") {
                event.preventDefault();
                swal("Failed", "Remarks is required", "error").then(function () {
                    $("#Remarks").focus();
                });
            }

            else {
                event.preventDefault();
                $.ajax({
                    url: "/Package/Edit",
                    type: "POST",
                    data:
                   {
                       Id: $("#Id").val(),
                       Name: $("#Name").val(),
                       MBPS: $("#MBPS").val(),
                       Taka: $("#Taka").val(),
                       Remarks: $("#Remarks").val(),

                   },
                    success: function (data) {
                        if (data == "true")
                            swal("Success", "Successfully Saved", "success");
                        else
                            swal("Failed", data, "error");
                        resetfunction();
                    },
                    error: function (data) {
                        alert(data)
                    },

                })
            }
        });
        function resetfunction() {

            $("#Name").val(""),
           $("#MBPS").val(""),
            $("#Taka").val(""),
            $("#Remarks").val("")

        }
        //$("#reset").click(function () {

        //    resetFunction();

        //});
    });
</script>