@model isp_management.Models.RouteTB
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<section id="main-content" class="">
    <section class="wrapper">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Route Details
                    </header>
                    <div class="table-responsive panel col-md-8">
                        <table class="table">
                            <tbody>

                                <tr>
                                    <td class="text-primary text-right" width="30%">Name: </td>
                                    <td style="font-weight:bold">@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Address: </td>
                                    <td style="font-weight:bold">@Model.Address</td>
                                </tr>
                                <tr>
                                    <td class="text-primary text-right" width="30%">Post Code: </td>
                                    <td style="font-weight:bold">@Model.Post_Code</td>
                                </tr>
                              
                            </tbody>
                        </table>
                        <div class="form-group" style="text-align:center">

                            <a href="~/Route/Edit?id=@Model.Id" class="btn btn-success>Edit</a>
                            <a href="~/Route/Search" class="btn btn-info">Back</a>

                        </div>
                    </div>
                </section>

            </div>
        </div>

        <!-- page end-->
    </section>
</section>