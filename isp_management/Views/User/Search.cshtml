
@model List<isp_management.Models.UserTB>
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
<section id="main-content" class="">
    <section class="wrapper">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        User Search
                    </header>
                    <div class="panel-body">
                        <div class="adv-table">

                            <table class="display table table-bordered table-striped" id="example">
                                <thead>
                                    <tr role="row">
                                        <th>Option</th>
                                        <th>FullName</th>
                                        <th>UserName</th>
                                        <th>Password</th>
                                        <th>Email</th>
                                        <th>Mobile1</th>
                                        <th>Mobile2</th>
                                        <th>Gender</th>
                                        <th>National Id</th>
                                        <th>Address</th>
                                        <th>Remarks</th>
                                        <th>User Stautus</th>
                                        <th>User Type</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (isp_management.Models.UserTB user in (IEnumerable<isp_management.Models.UserTB>)Model)
                                    {
                                        <tr>


                                            <td>
                                                <a href="~/User/Edit?id=@user.Id">Edit </a>
                                                | <a href="~/User/UserDetails?id=@user.Id">Details</a>
                                            </td>
                                            <td>@user.FullName</td>
                                            <td>@user.UserName</td>
                                            <td>@user.Password</td>
                                            <td>@user.Email</td>
                                            <td>@user.Mobile1</td>
                                            <td>@user.Mobile2</td>
                                            <td>@user.Gender_Id</td>
                                            <td>@user.National_Id</td>
                                            <td>@user.Address</td>
                                            <td>@user.Remarks</td>
                                            <td>@user.UserStatus_Id</td>
                                            <td>@user.UserType_Id</td>
                                        </tr>
                                    }
                                <tbody>
                            </table>

                        </div>
                    </div>
                </section>
            </div>
        </div>
        
        <!-- page end-->
    </section>
</section>
